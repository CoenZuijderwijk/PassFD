{% extends 'admin/nav_bar.html.twig' %}
{% block body %}
    <div class="row">
 {% for image in images %}
    <div class="col-sm-3 col-lg-2">
    <img style="width: 150px; height: 200px;"src="{{ image.uri }}" onclick="{{ path('clothing_show', {'id': image.id}) }} }}">
        <a class="btn btn-primary" href="{{ path('clothing_show', {'id': image.id}) }}">show</a>
        <form method="post" action="{{ path('clothing_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('clothing_delete' ~ image.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
 {% endfor %}
    </div>
{% endblock %}